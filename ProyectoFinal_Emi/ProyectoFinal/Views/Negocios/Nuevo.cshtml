    <script type="text/javascript">

        var perfil = @ViewBag.Perfil

        $(document).ready(function(){
            if (perfil == 4) {
                $("#ddlPerfiles").show();
                $("#lblPerfil").show();
            }
           
            
            var selectDDL = $("#ddlTiposNegocio").val();
            if (selectDDL == 1) {
                $("#divLugarHospedaje").show();
                $("#divComercio").hide();
            }
            else {
                if (selectDDL == 2) {                    
                    $("#divComercio").show();
                    $("#divLugarHospedaje").hide();
                }
                else {
                    $("#divLugarHospedaje").hide();
                    $("#divComercio").hide();
                }
            }


            $("#ddlTiposNegocio").change(function () {
                var select = $(this).val();
                if (select == 1) {
                    $("#divLugarHospedaje").show();
                    $("#divComercio").hide();
                }
                else {
                    if (select == 2) {
                        $("#divComercio").show();
                        $("#divLugarHospedaje").hide();
                    }
                    else {
                        $("#divLugarHospedaje").hide();
                        $("#divComercio").hide();
                    }
                }
            });
        });

    </script>

