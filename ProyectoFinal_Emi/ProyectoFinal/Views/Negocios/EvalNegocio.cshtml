    <script type="text/javascript">   
        
        var idtramite = "@ViewBag.Tramite"    
        var accion;
       

        $(document).ready(function () {

            $("#btnAprobar").click(function () {
                $("#textoAprob").show();
                $("#textoRecha").hide();
                $("#comentario").show();
                $("#btnConfirmar").show();
                $("#textoSolicCorr").hide();
                accion = 3;
            });

            $("#btnRechazar").click(function () {
                $("#textoAprob").hide();
                $("#textoRecha").show();
                $("#comentario").show();
                $("#btnConfirmar").show();
                $("#textoSolicCorr").hide();
                accion = 4;
            });

            $("#btnSolicitarCorreccion").click(function () {
                $("#textoAprob").hide();
                $("#textoRecha").hide();
                $("#textoSolicCorr").show();
                $("#comentario").show();
                $("#btnConfirmar").show();
                accion = 6;
            });

            $("#btnConfirmar").click(function(){
                if (confirm('¿Está seguro que desea confirmar la operación?')) {
                    window.location = "../../Tramites/ResolverTramite/?idtramite="+idtramite+"&accion="+accion+"&comentario="+$("#coment").val();
                }
            });

            });


    </script>
