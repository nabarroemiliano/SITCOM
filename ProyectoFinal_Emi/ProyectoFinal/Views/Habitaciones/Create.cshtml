@model DAL.Habitacion

@{
    ViewBag.Title = "Create";
}

<h2>AGREGAR HABITACION</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Habitacion</h4>
        <hr />
        @Html.ValidationSummary(true)
        @{int idHotel = ViewBag.idHotel;
        @Html.Hidden("idHotel", idHotel)
        }

        <div class="form-group">
            @Html.Label("Nombre: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreHabitacion)
                @Html.ValidationMessageFor(model => model.nombreHabitacion)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tipo: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTipoHabitacion", String.Empty)
                @Html.ValidationMessageFor(model => model.idTipoHabitacion)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Cantidad de baños: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidadBanios)
                @Html.ValidationMessageFor(model => model.cantidadBanios)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Balcón ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBox("balcon")
                @Html.ValidationMessageFor(model => model.balcon)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Heladera ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBox("heladera")
                @Html.ValidationMessageFor(model => model.heladera)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Microondas ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBox("microondas")
                @Html.ValidationMessageFor(model => model.microondas)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="AGREGAR" class="btn btn-default" /> 
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VOLVER", "Index", new { idHotel = ViewBag.idHotel })
</div>
