                <a class="list-group-item" href="#">
                    @Html.Label("DESCRIPCION: ") @Model.descripcion
                </a>
                <a class="list-group-item" href="#">
                    @Html.Label("LOCALIDAD: ") @Model.Sucursal.FirstOrDefault().Domicilio.Localidad.nombreLocalidad
