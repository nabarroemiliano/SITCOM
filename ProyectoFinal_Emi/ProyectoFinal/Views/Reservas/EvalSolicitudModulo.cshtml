        </div>
        <div class="panel-body">
            <div class="list-group">
                <a class="list-group-item list-group-item-info" href="#" style="font-size: 20px;">
                    <h4>LUGAR DE HOSPEDAJE</h4>
                </a>
                <a class="list-group-item" href="#">
                    @Html.Label("NOMBRE: ") @Model.nombre
                </a>
                <a class="list-group-item" href="#">
                    @Html.Label("TIPO: ") @Model.TipoDeNegocio.nombre
                </a>
                <a class="list-group-item" href="#">
                    @if (Model.LugarHospedaje.FirstOrDefault().idTipoLugarHospedaje != 2)
                    {
                        @Html.Label("TIPO  -  ") @Model.LugarHospedaje.FirstOrDefault().TipoLugarHospedaje.nombre
                    }
                    else
                    {
                        @Html.Label("TIPO  -  ") @Model.LugarHospedaje.FirstOrDefault().TipoLugarHospedaje.nombre
                        @Html.Label(" DE ") @Model.LugarHospedaje.FirstOrDefault().Complejo.FirstOrDefault().TipoComplejo.nombreTipoComplejo
                    }
                </a>
                <a class="list-group-item" href="#">
                    @Html.Label("DESCRIPCION: ") @Model.descripcion
                </a>
                <a class="list-group-item" href="#">
                    @Html.Label("LOCALIDAD: ") @Model.Sucursal.FirstOrDefault().Domicilio.Localidad.nombreLocalidad
                </a>
                <a class="list-group-item" href="#">
                    @Html.Label("CALLE: ") @Model.Sucursal.FirstOrDefault().Domicilio.calle
                </a>
                <a class="list-group-item" href="#">
                    @Html.Label("NÚMERO: ") @Model.Sucursal.FirstOrDefault().Domicilio.numero
                </a>
                <a class="list-group-item" href="#">
                    @Html.Label("BARRIO: ") @Model.Sucursal.FirstOrDefault().Domicilio.barrio
                </a>
                <a class="list-group-item" href="#">
                    @Html.Label("DPTO: ") @Model.Sucursal.FirstOrDefault().Domicilio.dpto
                </a>

                <br />
                <br />
            </div>

            <br />
            <div class="list-group">
                <a class="list-group-item list-group-item-info" href="#" style="font-size: 20px;">
                    <h4>DATOS DEL RESPONSABLE</h4>
                </a>


                @{
                    DAL.Persona p = ViewBag.Persona;
                    <a class="list-group-item" href="#">
                        @Html.Label("NOMBRE: ") @p.nombre
                    </a>
                    <a class="list-group-item" href="#">
                        @Html.Label("APELLIDO: ") @p.apellido
                    </a>
                    <a class="list-group-item" href="#">
                        @Html.Label("SEXO: ") @p.Sexo.nombre
                    </a>
                    <a class="list-group-item" href="#">
                        @Html.Label(p.TipoDocumento.nombre + ": ") @p.documento
                    </a>
                    <a class="list-group-item" href="#">
                        @Html.Label("EMAIL: ") @p.email
                    </a>
                    <a class="list-group-item" href="#">
                        @Html.Label("APELLIDO: ") @p.apellido
                    </a>


                    <br />

                }
                <br />
                <br />
            </div>
            <div class="col-lg-offset-4">
                @Html.Label("¿Se presentó el formulario N°XX-XX correctamente?", new { @class = "control-label" })
                @Html.Label("SI", new { @class = "control-label" }) @Html.RadioButton("confirmaFormulario", 1, new { id = "opcionSi" })
                @Html.Label("NO", new { @class = "control-label" }) @Html.RadioButton("confirmaFormulario", 2, new { id = "opcionNo" })
                <br />
            </div>
            <div class="col-lg-offset-5">
                <button type="button" class="btn btn-green" id="btnAprobar" style="display:none"><i class="fa fa-check"></i>APROBAR </button>

                <button type="button" class="btn btn-red" id="btnRechazar" style="display:none"> <i class="fa fa-times fa fa-white"></i>RECHAZAR</button>
            </div>
            <br />
            <br />

            <div id="textoAprob" style="display:none" class="alert alert-block alert-success fade in col-lg-10 col-lg-offset-1">
                <h4 class="alert-heading"><i class="fa fa-check"></i> Aprobado!</h4>
                <p>
                    Atención! Usted esta aprobando la solicitud del modulo de reserva para el negocio en cuestión,
                    el mismo será otorgado a la brevedad.
                </p>
            </div>

            <div id="textoRecha" style="display:none" class="alert alert-block alert-danger fade in col-lg-10 col-lg-offset-1">
                <h4 class="alert-heading"><i class="fa fa-times"></i> Rechazado</h4>
                Atención! Usted esta rechazando la solicitud de modulo de reserva para el negocio en cuestión,
                el mismo no será otorgado al usuario. Por favor indique el motivo a continuación:
                <br />
            </div>
            <br />
            <div class="col-lg-offset-3" id="comentario" style="display:none">
                <textarea id="coment" style="width:450px; height:200px;"></textarea>
            </div>
            <input type="button" value="CONFIRMAR" class="btn btn-green col-lg-offset-5" id="btnConfirmar" style="display:none" />
        </div>
