    <script type="text/javascript">
        var idtramite = "@ViewBag.Tramite"
        var accion;


        $(document).ready(function () {


            //$("#confirmaFormulario").change(function () {
            //    var confirma = $("#confirmaFormulario").val();
            //    if (confirma == 1) {
            //        $("#btnAprobar").show();
            //        $("#btnRechazar").hide();
            //    }
            //    else {
            //        $("#btnAprobar").hide();
            //        $("#btnRechazar").show();
            //    }
            //});

            $("#opcionSi").click(function () {
                $("#btnAprobar").show();
                $("#btnRechazar").hide();
                $("#textoRecha").hide();
                $("#comentario").hide();
                $("#btnConfirmar").hide();
            });
            $("#opcionNo").click(function () {
                $("#btnAprobar").hide();
                $("#btnRechazar").show();
                $("#textoAprob").hide();
                $("#comentario").hide();
                $("#btnConfirmar").hide();
            });

            $("#btnAprobar").click(function () {
                $("#textoAprob").show();
                $("#textoRecha").hide();
                //$("#comentario").show();
                $("#btnConfirmar").show();
                accion = 3;
            });

            $("#btnRechazar").click(function () {
                $("#textoAprob").hide();
                $("#textoRecha").show();
                $("#comentario").show();
                $("#btnConfirmar").show();
                accion = 4;
            });

            $("#btnConfirmar").click(function () {
                if (confirm('¿Está seguro que desea confirmar la operación?')) {
                    window.location = "../../Tramites/ResolverTramite/?idtramite=" + idtramite + "&accion=" + accion + "&comentario=" + $("#coment").val();
                }
            });

        });



    </script>
